<odoo>
    <record id="seq_experience_certificate" model="ir.sequence">
        <field name="name">Experience Certificate</field>
        <field name="code">experience.certificate</field>
        <field name="prefix">%(company_code)s/EXPC/</field>
        <field name="padding">4</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
        <field name="company_id" eval="False"/> <!-- Shared sequence -->
    </record>
</odoo>
